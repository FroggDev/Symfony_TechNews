{% extends 'layout.html.twig' %}

{% block page_title 'form.login.title'|trans %}

{% set active = "login" %}

{% block content %}
    <div class="row">
        <div class="col-xs-6 col-xs-push-3">

            <h2 class="text-center">{% trans %}form.login.title{% endtrans %}</h2>

            {# Flash bags #}
            {% include 'components/_flashbags.html.twig' %}

            <form action="{{ url('security_connexion') }}" class="form-horizontal" method="POST">

                <div class="form-group">
                    <div class="col-xs-6">
                        <input name="_username"
                               value="{{ last_email }}"
                               class="form-control" required type="email"
                               placeholder="{% trans %}form.login.placeholder.email{% endtrans %}">
                    </div>
                    <div class="col-xs-6">
                        <input name="_password"
                               class="form-control" required type="password"
                               placeholder="{% trans %}form.login.placeholder.password{% endtrans %}">
                    </div>
                </div>

                 <input {% if app.request.query.get('go') is defined %}value="{{ app.request.query.get('go') }}"{% endif %} type="hidden" name="_target_path"/>
                 <input type="submit" class="btn btn-block btn-primary"/>

                <div class="form-group">
                    <div class="col-xs-6"><a href="{{ path("security_register") }}">{% trans %}form.login.button.register{% endtrans %}</a></div>
                    <div class="col-xs-6"><a href="{{ path("security_recover") }}">{% trans %}form.login.button.recover{% endtrans %}</a></div>
                </div>

            </form>
        </div>
    </div>
{% endblock %}




