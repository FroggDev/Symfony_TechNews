{% extends "layout.html.twig" %}

{% set active='index' %}

{% block page_title 'Home' %}

{% block content %}

<div class="row">
    <!--colleft-->
    <div class="col-md-8 col-sm-12">
        <div class="box-caption">
            <span>spotlight</span>
        </div>

        <!--sportlight-->
        <section class="owl-carousel owl-spotlight">
            {% for article in spotlights %}
            <div>
                <article class="spotlight-item">
                    <div class="spotlight-img">
                        {{ articleImage(article,"img-responsive") | raw }}
                        {{ categoryLink(article.category,"cate-tag") | raw   }}
                    </div>
                    <div class="spotlight-item-caption">
                        <h2 class="font-heading">{{ articleLink(article) | raw }}</h2>
                        <div class="meta-post">
                            {{ authorLink(article.author) | raw }}
                            <em></em>
                            <span>{{ article.dateCreation }}</span>
                        </div>
                        <p>{{ article.content  | maxLen(1000) | raw }}</p>
                    </div>
                </article>
            </div>
            {% endfor %}
        </section>

        <!--spotlight-thumbs-->
        <section class="spotlight-thumbs">
            <div class="row">
                {% for article in spotlights %}
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="spotlight-item-thumb">
                        <div class="spotlight-item-thumb-img">
                            {{ articleImage(article) | raw }}
                            {{ categoryLink(article.category,"cate-tag") | raw   }}
                        </div>
                        <h3>{{ articleLink(article,47) | raw }}</h3>
                        <div class="meta-post">
                            {{ authorLink(article.author) | raw }}
                            <em></em>
                            <span>{{ article.dateCreation }}</span>
                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>
        </section>
    </div>

    {# Side bar #}
    {#% include 'components/_sidebar_html.twig' %#}
    {{ render(controller('App\\Controller\\SectionController::sideBar')) }}

    {% endblock %}
