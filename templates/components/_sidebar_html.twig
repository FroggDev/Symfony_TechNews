{% set lastFiveArticles = article_service.findLastFiveArticle() %}

<!--colright-->
<div class="col-md-4 col-sm-12">

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <h3 class="text-center">Welcome {{ app.user.lastname | capitalize }} {{ app.user.firstname | upper }}</h3>
        <h4 class="text-center">
            {% if is_granted('ROLE_ADMIN') %}
                Administrator
            {% elseif is_granted('ROLE_AUTEUR') %}
                Author
            {% else %}
                Member
            {% endif %}
        </h4>
        <ul class="list-group">
            {% if is_granted('ROLE_AUTEUR') %}
                <li class="list-group-item">
                    <a href="{{ url('add_article') }}">Create a new article</a>
                </li>
            {% endif %}
            <li class="list-group-item">
                <a href="{{ url('security_logout') }}">Logout</a>
            </li>
        </ul>
    {% else %}


        <li class="list-group-item"><a href="{{ url('security_connexion', { 'go' :  getUri() }) }}">Login</a></li>
        <li class="list-group-item"><a href="{{ url('security_register') }}">Register</a></li>
    {% endif %}

    <!--tab popular-->
    <ul role="tablist" class="tab-popular">
        <li class="active">
            <a href="{{ url('last_article') }}">
                LAST PUBLICATIONS
            </a>
        </li>
    </ul>
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="tab1">
            <ul class="list-news-popular">
                {% for article in lastFiveArticles %}
                <li>
                    {{ article | articleImageLink | raw }}
                    <h3>{{ article | articleLink(47) | raw }}</h3>
                    <div class="meta-post">
                        {{ article.author | authorLink | raw }}
                        <em></em>
                        <span>{{  article.dateCreation }}</span>
                    </div>
                    <p>{{ article.content  | maxLen(100) | raw  }}</p>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <!-- subcribe box-->
    <div class="subcribe-box">
        <h3>NEWSLETTER</h3>
        <p>Inscrivez-vous pour recevoir nos derni√®res publications.</p>
        <input type="text" placeholder="Votre Email..." />
        <button class="my-btn">Je m'inscris</button>
    </div>
    <!-- connect us-->
    <div class="connect-us">
        <div class="widget-title">
			<span>
				Follow us
			</span>
        </div>
        <ul class="list-social-icon">
            {% include 'components/_socialMedia.html.twig' %}
        </ul>
    </div>

    <!-- special post-->
    <div class="connect-us">
        <div class="widget-title">
			<span>
				Special
			</span>
        </div>
        <div class="list-special">
            {% for article in specialArticles %}
            <article class="news-two-large">
                {{ article | articleImageLink | raw }}
                <h3>{{ article | articleLink(47) | raw }}</h3>
                <div class="meta-post">
                    {{ article.author | authorLink | raw }}
                    <em></em>
                    <span>{{  article.dateCreation }}</span>
                </div>
                <p>{{ article.content  | maxLen(200) | raw  }}</p>
            </article>
            {% endfor %}
        </div>
    </div>
</div>