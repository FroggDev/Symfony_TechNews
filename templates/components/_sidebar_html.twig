{% set lastFiveArticles = article_service.findLastFiveArticle() %}

<!--colright-->
<div class="col-md-4 col-sm-12">

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <h3 class="text-center">Welcome {{ app.user.lastname | capitalize }} {{ app.user.firstname | upper }}</h3>
        <h4 class="text-center">
            {% if is_granted('ROLE_ADMIN') %}
                Administrator
            {% elseif is_granted('ROLE_AUTEUR') %}
                Author
            {% else %}
                Member
            {% endif %}
        </h4>
        <ul class="list-group">
            <li class="list-group-item">
                <a href="{{ path('security_logout') }}">Logout</a>
            </li>
            {% if is_granted('ROLE_AUTEUR') or is_granted('ROLE_ADMIN') %}
                <li class="list-group-item">
                    <a href="{{ path('add_article') }}">Create a new article</a>
                </li>
            {% endif %}
        </ul>
    {% else %}
        <li class="list-group-item"><a href="{{ path('security_connexion', { 'go' :  getUri() }) }}">Login</a></li>
        <li class="list-group-item"><a href="{{ path('security_register') }}">Register</a></li>
    {% endif %}

    <!--tab popular-->
    <ul role="tablist" class="tab-popular">
        <li class="active">
            <a href="{{ url('last_article') }}">
                LAST PUBLICATIONS
            </a>
        </li>
    </ul>
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="tab1">
            <ul class="list-news-popular">
                {% for article in lastFiveArticles %}
                <li>
                    {{ articleImageLink(article) | raw }}
                    <h3>{{ articleLink(article,47) | raw }}</h3>
                    <div class="meta-post">
                        {{ authorLink(article.author) | raw }}
                        <em></em>
                        <span>{{  article.dateCreation }}</span>
                    </div>
                    <p>{{ article.content  | maxLen(100) | raw  }}</p>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <!-- subcribe box-->
    {{ render(controller('App\\Controller\\NewsletterController::sideNewsletter' )) }}

    <!-- connect us-->
    <div class="connect-us">
        <div class="widget-title">
			<span>
				Follow us
			</span>
        </div>
        <ul class="list-social-icon">
            {% include 'components/_socialMedia.html.twig' %}
        </ul>
    </div>

    <!-- special post-->
    <div class="connect-us">
        <div class="widget-title">
			<span>
				Special
			</span>
        </div>
        <div class="list-special">
            {% for article in specialArticles %}
            <article class="news-two-large">
                {{ articleImageLink(article) | raw }}
                <h3>{{ articleLink(article,47) | raw }}</h3>
                <div class="meta-post">
                    {{ authorLink(article.author) | raw }}
                    <em></em>
                    <span>{{  article.dateCreation }}</span>
                </div>
                <p>{{ article.content  | maxLen(200) | raw  }}</p>
            </article>
            {% endfor %}
        </div>
    </div>
</div>