<!--menu mobile-->
<nav class="menu-res hidden-lg hidden-md ">
    <div class="menu-res-inner">
        <ul>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <ul class="list-group">
                    <li class="list-group-item">
                        <a href="{{ path('security_logout') }}">Logout</a>
                    </li>
                    {% if is_granted('ROLE_AUTEUR') or is_granted('ROLE_ADMIN') %}
                        <li class="list-group-item">
                            <a href="{{ path('add_article') }}">Create a new article</a>
                        </li>
                    {% endif %}
                </ul>
            {% else %}
                <li class="list-group-item"><a href="{{ path('security_connexion', { 'go' :  getUri() }) }}">Login</a></li>
                <li class="list-group-item"><a href="{{ path('security_register') }}">Register</a></li>
            {% endif %}
            {% for category in categories %}
                <li>{{ categoryLink(category) | raw  }}</li>
            {% endfor %}
        </ul>
    </div>
</nav>
<div class="page">
    <div class="container">
        <!--header-->
        <header class="header">
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <a href="{{ path('index') }}" class="logo">
                        <img alt="Logo" src="{{ asset('images/logo.png') }}" />
                    </a>
                </div>
            </div>
        </header>
        <!--menu-->
        <nav class="menu font-heading">
            <div class="menu-icon hidden-lg hidden-md">
                <i class="fa fa-navicon"></i>
                <span>MENU</span>
            </div>

            <ul class="hidden-sm hidden-xs">
                <li {% if active == 'index' %}class="current"{% endif %}><a href="{{ path('index') }}">Accueil</a></li>
                {% for category in categories %}
                <li {% if active == category.label %}class="current"{% endif %}>{{ categoryLink(category) | raw  }}</li>
                {% endfor %}
            </ul>

            <div class="search-icon">
                <div class="search-icon-inner">
                    <i class="fa fa-search"></i>
                </div>
                <div class="search-box">
                    <input type="text" placeholder="Rechercher..." onkeypress="return searchFunction(event)"/>
                    <button>Lancer</button>
                </div>
            </div>
        </nav>